# Open3DStudio Replit Configuration
# This file configures how Open3DStudio runs on Replit

run = "npm run start"
entrypoint = "src/index.tsx"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
# For production deployment, build and serve static files
build = ["sh", "-c", "npm install && CI=false npm run build"]
run = ["sh", "-c", "npx serve -s build -l 3000"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[env]
# Disable browser auto-open (not available in Replit environment)
BROWSER = "none"
# Allow connections from Replit's dev domain
DANGEROUSLY_DISABLE_HOST_CHECK = "true"
# Prevent ESLint warnings from breaking the build
CI = "false"
# Set Node environment
NODE_ENV = "development"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Open 3D Studio"

[[workflows.workflow]]
name = "Open 3D Studio"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
